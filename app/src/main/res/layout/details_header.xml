<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view3" android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="20sp" android:textStyle="bold"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
    />
    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:background="@android:color/darker_gray" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/done_btn_details"
            android:background="@drawable/task_not_done"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="8dp" android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Open Calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_txt_details" app:layout_constraintEnd_toEndOf="@+id/done_btn_details"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view2" android:textSize="18sp"
            android:textColor="#2196F3" android:layout_marginTop="8dp"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view2" android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="20sp"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="31dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view3" android:background="@drawable/linear_layout_drawable"
            app:layout_constraintVertical_bias="0.269" android:padding="2dp" android:gravity="center">
        <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/priority_one_details_activity"
                android:background="@drawable/p1" tools:layout_editor_absoluteY="227dp"
                tools:layout_editor_absoluteX="264dp"/>
        <View
                android:layout_width="1dp"
                android:layout_height="40dp" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:id="@+id/view5" android:background="#f78c1a"/>
        <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/priority_two_details_activity"
                android:background="@drawable/r2" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="328dp"/>
        <View
                android:layout_width="1dp"
                android:layout_height="40dp" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:id="@+id/view6" android:background="#f78c1a"/>
        <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/priority_three_details_activity"
                android:background="@drawable/r3" tools:layout_editor_absoluteY="269dp"
                tools:layout_editor_absoluteX="358dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>